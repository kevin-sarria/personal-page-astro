---
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}
const { title, description, link, date } = Astro.props;
---

<div
  class="absolute size-3 bg-indigo-500 rounded-full mt-1.5 -start-1.5 border border-indigo-400"
></div>

<time
  class="mb-1 text-sm font-normal leading-none text-gray-600"
  >{ date }</time
>
<h3 class="text-lg font-semibold text-gray-900">
  { title }
</h3>
<p class="mb-4 text-base font-normal text-gray-500 text-pretty">
  { description }
</p>

{
    link && (
        <a
            href={link}
            class="inline-flex items-center text-indigo-600 hover:underline dark:text-indigo-200"
        >
            Saber m√°s...{" "}
            <svg
                class="w-3 h-3 ms-2 rtl:rotate-180"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                ></path>
            </svg>
        </a>
    )
}